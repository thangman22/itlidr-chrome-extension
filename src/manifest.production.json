{
    "manifest_version": 3,
    "name": "ITLIDR - It Too Long I Don't Read",
    "description": "Summary Article / News for you with GenAI",
    "version": "1.0.0",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "side_panel": {
        "default_path": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": [
        "sidePanel",
        "scripting",
        "storage"
    ]
}